<% layout('/layouts/boilerplate') -%>

<body>
    <!-- <= successMsg %> Its mentioned in include through layout -->  
    
    <h3 class="mb-4">All Listings</h3>

    <!-- <form method="GET" action="/listings/new">
        <button>Add New Listing</button>
    </form> -->


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

        <% for (let listing of allListings) { %>

            <a href="/listings/<%=listing.id%>" class="listing-link" >
                <div class="card col listing-card" >

                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_img" style="height: 20rem;">
                    <div class="card-img-overlay">  </div>

                    <div class="card-body">
                        <p class="card-text">
                            <b> <%= listing.title %> </b> <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night <br>
                            <%= listing.location %>, <%= listing.country %> <br>
                        </p>
                    </div> 

                </div>
            </a>

        <% } %>
        
    </div>



